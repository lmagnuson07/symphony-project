{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="container">
            <div class="alert alert-success">
                <h3>{{ message }}</h3>
            </div>
        </div>
    {% endfor %}

    <br>
    <div class="container">
        <h2>Edit Dishes</h2>
        <br>
        <a href="{{ path('app_dish.create') }}">Create</a>
        <table class="table table-striped">
            <thead>
            <tr>
                <td>Dish ID</td>
                <td>Name</td>
                <td>Description</td>
                <td>Category</td>
                <td>Price</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
            </thead>
            <tbody>
            {% for dish in dishes %}
                <tr>
                    <td>{{ dish.id }}</td>
                    <td><a href="{{ path('app_dish.details', {id: dish.id}) }}">{{ dish.name }}</a></td>
                    <td>{{ dish.description }}</td>
                    <td>{{ dish.category }}</td>
                    <td>{{ dish.price }}</td>
                    <td><a href="{{ path('app_dish.delete', {id: dish.id}) }}">delete</a></td>
                    <td><a href="{{ path('app_dish.edit', {id: dish.id}) }}">edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
